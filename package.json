{
  "name": "tokenking",
  "version": "0.0.0-development",
  "description": "Analyze Claude Code token usage for a specific project",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "tokenking": "./src/index.js"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node src/index.js",
    "test": "node --test test/*.test.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamiurg/tokenking.git"
  },
  "bugs": {
    "url": "https://github.com/dreamiurg/tokenking/issues"
  },
  "homepage": "https://github.com/dreamiurg/tokenking#readme",
  "keywords": [
    "claude",
    "claude-code",
    "tokens",
    "usage",
    "analytics",
    "cli"
  ],
  "author": "dreamiurg",
  "license": "MIT",
  "dependencies": {
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
