{
  "name": "tokenking",
  "version": "1.3.4",
  "description": "Analyze Claude Code token usage for a specific project",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tokenking": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/add-shebang.js",
    "build:test": "tsc --project tsconfig.test.json",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "test": "npm run build && npm run build:test && node --test dist/test/**/*.test.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamiurg/tokenking.git"
  },
  "bugs": {
    "url": "https://github.com/dreamiurg/tokenking/issues"
  },
  "homepage": "https://github.com/dreamiurg/tokenking#readme",
  "keywords": [
    "claude",
    "claude-code",
    "tokens",
    "usage",
    "analytics",
    "cli"
  ],
  "author": "dreamiurg",
  "license": "MIT",
  "dependencies": {
    "ccusage": "^17.1.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
